                    g.displayHeader();
                    g.displayFarm();
                    g.displayMainOptions();
                    choice = scanner.nextInt();

                    if(choice == 1){
                        System.out.print("\nSelect Row: ");
                        int row = scanner.nextInt();
                        System.out.print("\nSelect Column: ");
                        int col = scanner.nextInt();
                    }
                    else if(choice == 2){

                    }
                    else if(choice == 3){

                    }
                    
                    gameOver = g.checkGameOver();
                }
            }
            else if(choice == 2){
                exit = true;
            }
        }
    }
}